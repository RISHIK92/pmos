generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id    String @id @default(cuid())
    email String @unique

    ConversationLog ConversationLog[]
    Memory Memory[]
    Transaction Transaction[]
    PendingTransaction PendingTransaction[]
    ContentItem ContentItem[]
    focusSessions FocusSession[]

    coreMemories CoreMemory[]
    TaskSection TaskSection[]
    dailyLogs DailyLog[]

    dailyHealthLogs DailyHealthLog[]

    bankAccounts BankAccount[]
}

model ConversationLog {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  userRaw     String
  aiResponse  String

  // The Enricher Output (Stored here for debugging/analytics)
  // Contains: { summary: "", synthetic_query: "", tags: [] }
  enricherData Json?   

  // Search Optimization
  targetCategory String? // e.g., "health", "tasks", "general"

  @@index([userId, targetCategory])
  @@index([createdAt])
}

model CoreMemory {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  // The Fact
  fact      String   // "User is allergic to peanuts"
  category  String   // "health", "preference", "work"
  certainty Float    // 0.0 to 1.0 (How sure is the AI?)

  // Sync Status (To ensure ChromaDB stays updated)
  isSynced  Boolean  @default(false) 

  @@index([userId, category])
}

model Memory {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  title     String
  content   String
  tags      String[]

  isCritical    Boolean  @default(false)
  reminderTime  String?  // "HH:MM"
  repeatPattern String?  // "daily", "weekly", "monthly", "none"
  reminderDate  String?  // "YYYY-MM-DD"

  @@index([userId])
}

model TaskSection {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  title     String
  icon      String
  color     String
  
  tasks     Task[]
  
  createdAt DateTime @default(now())
  
  @@index([userId])
}

model Task {
  id        String   @id @default(uuid())
  sectionId String
  section   TaskSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  
  title     String
  status    String
  due       String?
  dueDate   String?
  dueTime   String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([sectionId])
}

