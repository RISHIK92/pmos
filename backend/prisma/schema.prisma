model BankAccount {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  createdAt     DateTime @default(now())

  name          String   // e.g. "HDFC", "SBI"
  accountNumber String   // Last 4 digits e.g. "1234"
  balance       Float    @default(0.0)
  color         String   @default("#000000") // For UI badges

  transactions  Transaction[]

  @@index([userId])
}

model Transaction {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  payee     String
  category  String?
  amount    Float
  type      String   // "income" or "expense"
  
  icon      String   @default("banknote")
  iconBg    String   @default("#000000")
  excludeFromBalance Boolean @default(false)

  // Link to Bank Account
  accountId String?
  account   BankAccount? @relation(fields: [accountId], references: [id])

  @@index([userId])
  @@index([accountId])
}

model PendingTransaction {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())

  amount      String   // Keeping as string to match frontend input state
  payee       String
  category    String
  type        String   // "income" or "expense"
  actionLabel String   // "Bills", "Send", "Request"

  @@index([userId])
}

model ContentItem {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  type      String   // "WATCH", "READ", "SOCIAL"
  title     String
  subtitle  String?  // Category for Read, Platform for Watch/Social
  platform  String?  // Netflix, Apple TV+, etc. (Or Source)
  url       String?
  progress  Float    @default(0.0)
  isRead    Boolean  @default(false)
  image     String?  // URL for poster or icon name
  
  // Custom metadata
  notifications Int @default(0)

  @@index([userId])
}

model FocusSession {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  startTime DateTime @default(now())
  
  mode      String   // "work", "study", "sleep", "detox"
  duration  Int      // Planned duration in minutes
  timeSpent Int      // Actual time spent in minutes
  completed Boolean
  reason    String?  // If exited early
  
  @@index([userId])
}

model DailyLog {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  date      String   // "YYYY-MM-DD"
  goal      Int      @default(2200)

  meals     MealItem[]

  @@unique([userId, date])
  @@index([userId])
}

model MealItem {
  id          String   @id @default(uuid())
  dailyLogId  String
  dailyLog    DailyLog @relation(fields: [dailyLogId], references: [id], onDelete: Cascade)

  name        String
  kcal        Int
  time        String
  type        String   // "Breakfast", "Lunch", "Dinner", "Snack"

  createdAt   DateTime @default(now())

  @@index([dailyLogId])
}

model DailyHealthLog {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  date      DateTime
  steps     Int      @default(0)
  hourlyData String? // JSON string: {"09:00": 500, ...}
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, date])
  @@index([userId])
}